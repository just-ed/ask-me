<div class="container">
  <div class="column-3-4">
    <div class="text-center">
      <div class="buffer-bottom">
        <h1 class="title-medium">Our users</h1>
      </div>

      <% @users.each do |user| %>
        <div class="users-list-item">
          <div class="user-image-div user-image-div-small">
            <%= link_to image_tag(user_avatar(user), class: 'user-image'), user_path(user) %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="column-1-4">
    <div class="hashtags-list">
      <div class="buffer-bottom">
        <h2 class="title-small">Hashtags</h2>
      </div>

      <% @hashtags.each do |hashtag| %>
        <span>
          <%= link_to "#{hashtag.name} #{hashtag.questions.count}", hashtag_url(hashtag),
                  class: 'button button-small button-outline button-rounded buffer-bottom-small' %>
        </span>
      <% end %>
    </div>
  </div>
</div>

