<div class="container content-wrapper buffer-both">
  <h1 class="title-medium">Edit profile</h1>

  <div class="column-1-2">
    <%= form_for(@user) do |f| %>
      <% if @user.errors.any? %>
        <div class="form-errors">
          <ul>
            <% for message in @user.errors.full_messages %>
              <li class="form-error-message"><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-field">
        <%= f.label :username, class: 'form-label' %>
        <%= f.text_field :username, class: 'form-text-field' %>
      </div>

      <div class="form-field">
        <%= f.label 'Name', class: 'form-label' %>
        <%= f.text_field :name, class: 'form-text-field' %>
      </div>

      <div class="form-field">
        <%= f.label 'Avatar URL', class: 'form-label' %>
        <%= f.text_field :avatar_url, class: 'form-text-field' %>
      </div>

      <div class="form-field">
        <%= f.label 'Avatar border color', class: 'form-label' %>
        <%= f.color_field :bg_color, value: user_avatar_border_color(@user), style: "background: transparent" %>
      </div>

      <div class="buffer-top-large buffer-bottom">
        If you don't want to change the password â€” leave these fields blank!
      </div>

      <div class="form-field">
        <%= f.label :password, class: 'form-label' %>
        <%= f.password_field :password, class: 'form-text-field' %>
      </div>

      <div class="form-field">
        <%= f.label :password_confirmation, class: 'form-label' %>
        <%= f.password_field :password_confirmation, class: 'form-text-field' %>
      </div>

      <div class="form-action buffer-top">
        <%= f.submit 'Save', class: 'button button-dark button-small' %>
        or
        <%= link_to 'return', user_path(current_user) %>
      </div>
    <% end %>

    <div class="delete-user buffer-top-large">
      <%= link_to 'Delete account', current_user, :method => :delete,
                  data: {confirm: "Are you sure?"},
                  class: 'button button-small button-red' %>
    </div>
  </div>
</div>
