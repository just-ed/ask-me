<div class="container content-wrapper buffer-both">
  <h1 class="title-medium">Sign in</h1>

  <div class="column-1-2">
    <div class="form">
      <%= form_tag sessions_path do %>
        <div class="form-field">
          <%= label_tag :email, 'Login (email)', class: 'form-label' %>
          <%= text_field_tag :email, params[:email], class: 'form-text-field' %>
        </div>

        <div class="form-field">
          <%= label_tag :password, 'Password', class: 'form-label' %>
          <%= password_field_tag :password, '', class: 'form-text-field' %>
        </div>

        <div class="form-action">
          <%= submit_tag "Sign in", class: 'button button-small button-outline' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
